<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="100dp"
    android:orientation="vertical"
    tools:context=".ui.detail.PaymentSuccessFragment">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="284dp"
        android:layout_height="183dp"
        android:src="@drawable/payment_success"/>

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextView.PoppinsNormal20sp020202"
        android:text="Pembayaran Berhasil"
        android:layout_marginTop="42dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSubtile"
        android:text="Tunggu dirumah anda\nkami akan mengantarkan obat "
        android:textAlignment="center"
        style="@style/TextView.PoppinsNormal14sp8D92A3"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnOrderagain"
        style="@style/Button.Primary"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Pesan Obat Anda Lainnya"
        android:textAllCaps="false" />

