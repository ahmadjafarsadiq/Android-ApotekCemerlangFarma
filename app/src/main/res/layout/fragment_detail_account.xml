<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.profile.detailprofile.DetailAccountFragment">


 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="#FFF"
     android:layout_marginTop="0dp"
     android:paddingLeft="24dp"
     android:paddingRight="24dp"
     android:paddingTop="26dp"
     android:orientation="vertical">

     <TextView
         style="@style/TextView.PoppinsNormal14sp020202"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text= "Foto Profile"
         android:layout_marginTop="50dp"/>


     <ImageView
         android:id="@+id/ivProfile"
         android:layout_gravity="left"
         android:layout_marginTop="20dp"
         android:src="@drawable/ic_picture_empty"
         android:layout_width="110dp"
         android:layout_height="110dp"
         />

     <TextView
         style="@style/TextView.PoppinsNormal12sp8D92A3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="35dp"
         android:text="Nama"/>

     <EditText
         android:id="@+id/etName"
         style="@style/EditText.PoppinsNormal14sp020202"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="0dp"
         android:hint="Regita Farahdiba"
         android:minHeight="48dp"
         android:padding="10dp" />

     <TextView
         style="@style/TextView.PoppinsNormal12sp8D92A3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:text="Nomor HP"/>

     <EditText
         android:id="@+id/etPhoneNumber"
         style="@style/EditText.PoppinsNormal14sp020202"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="0dp"
         android:hint="0822208199688"
         android:minHeight="48dp"
         android:padding="10dp" />

     <TextView
         style="@style/TextView.PoppinsNormal12sp8D92A3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:text="Alamat"/>

     <EditText
         android:id="@+id/etAddress"
         style="@style/EditText.PoppinsNormal14sp020202"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="0dp"
         android:hint="Jl. Harapan ndah"
         android:minHeight="48dp"
         android:padding="10dp" />

     <TextView
         style="@style/TextView.PoppinsNormal12sp8D92A3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:text="Nomor Rumah"/>

     <EditText
         android:id="@+id/etHouseNumber"
         style="@style/EditText.PoppinsNormal14sp020202"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="0dp"
         android:hint="J45"
         android:minHeight="48dp"
         android:padding="10dp" />


     <TextView
         style="@style/TextView.PoppinsNormal12sp8D92A3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:text="Kota"/>

     <EditText
         android:id="@+id/etCity"
         style="@style/EditText.PoppinsNormal14sp020202"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="0dp"
         android:hint="Tanggerang Selatan"
         android:minHeight="48dp"
         android:padding="10dp" />









 </LinearLayout>

</androidx.core.widget.NestedScrollView>